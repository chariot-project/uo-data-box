{
  "compilerOptions": {
    "target": "es6",
    "module": "umd",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "pretty": true,
    "alwaysStrict": true,
    "lib": [
      "dom",
      "scripthost",
      "es2015",
      "es2017"
    ],
    "baseUrl": "./src"
  }
}
